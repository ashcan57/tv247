<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
  <addon id="repository.tv247" name="TV247 Repository" version="1.0.0" provider-name="Ashcan57">
    <extension point="xbmc.addon.repository" name="TV247 Repository">
      <dir>
        <info compressed="false">
          https://raw.githubusercontent.com/ashcan57/tv247/main/addons.xml
        </info>
        <checksum>
          https://raw.githubusercontent.com/ashcan57/tv247/main/addons.xml.md5
        </checksum>
        <datadir zip="true">
          https://raw.githubusercontent.com/ashcan57/tv247/main/zips/
        </datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>TV247 Repository</summary>
      <description>Your official Kodi repository for TV247.</description>
      <platform>all</platform>
    </extension>
  </addon>

  <!-- Your plugin entry -->
  <addon id="plugin.video.tv247"
         name="TV247 Video Add-on"
         version="1.0.0"
         provider-name="Ashcan57">
    <extension point="xbmc.python.pluginsource"
               library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>Demo video add-on from the TV247 repo.</summary>
      <description>This is a simple example plug-in so you can confirm that your repository installs and serves add-ons correctly.</description>
      <platform>all</platform>
    </extension>
  </addon>
</addons>

