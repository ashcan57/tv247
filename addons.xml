<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

  <!-- Repository Addon -->
  <addon id="repository.ashcan57"
         name="Ashcan57 Repository"
         version="1.0.0"
         provider-name="ashcan57">

    <extension point="xbmc.addon.repository" name="Ashcan57 Repository">
      <dir>
        <info>https://ashcan57.github.io/tv247/addons.xml</info>
        <checksum>https://ashcan57.github.io/tv247/addons.xml.md5</checksum>

        <!-- ZIPs hosted on GitHub Releases -->
        <datadir zip="true">https://ashcan57.github.io/tv247/</datadir>

      </dir>
    </extension>

    <extension point="xbmc.addon.metadata">
      <summary>Ashcan57 Repository</summary>
      <description>Home of the Ashcan57 Wizard</description>
      <platform>all</platform>
    </extension>

  </addon>

  <!-- Ashcan Wizard Add-on -->
  <addon id="script.custom.build.installer"
         name="Ashcan57 Wizard"
         version="1.0.0"
         provider-name="ashcan57">

    <extension point="xbmc.python.script" library="default.py" />

    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.addon.metadata">
      <summary>Ashcan57 Wizard</summary>
      <description>Installs the Ashcan57 custom build</description>
      <platform>all</platform>
    </extension>

  </addon>

</addons>
