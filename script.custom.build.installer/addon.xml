<?xml version="1.0" encoding="UTF-8"?>
<addon id="script.custom.build.installer"
       name="Ashcan57 Wizard"
       version="1.0.0"
       provider-name="ashcan57">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.python.script" library="default.py"/>

    <extension point="xbmc.addon.metadata">
        <summary>Ashcan57 Wizard</summary>
        <description>Installs the Ashcan57 custom Kodi build.</description>
        <platform>all</platform>
        <thumbnail>icon.png</thumbnail>
        <fanart>fanart.jpg</fanart>
    </extension>

</addon>
